<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Url Shortner</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
  <style>
    body{
     background-image: linear-gradient(to right, rgb(0, 204, 255) , rgb(247, 0, 255));
}
.container{
  background-color: rgb(239, 251, 251);
  margin: auto;
  top: 40px;
  
}
  </style>
</head>

<body>
  <div class="container">
  <h1>URL Shortner</h1>
  <form action="/shortUrls" method="post" class="my-4 form-inline">
    <label for="fullUrl" class="sr-only"> Url</label>
    <input type="url" name="fullUrl" id="fullUrl" placeholder="Enter Url" required class="form-control col mr-2">
    <button type="submit" class="btn btn-success"> Shorten Url</button>
  </form>
  <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Full Url</th>
        <th>Short Url</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      <% shortUrls.forEach(shortUrl=> {%>
        <tr>
          <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
        </tr>
      <% }) %>
        
    
    
    </tbody>
  </table>
     
</div>
</body>

</html>